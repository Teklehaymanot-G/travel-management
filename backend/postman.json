  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": ["console.log('Request:', pm.request);"]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Set auth token if it's a login response",
          "if (pm.response.code === 200 && pm.request.url.path.indexOf('auth/login') !== -1) {",
          "    var responseData = pm.response.json();",
          "    if (responseData.token) {",
          "        pm.collectionVariables.set('authToken', responseData.token);",
          "        console.log('Auth token set:', responseData.token);",
          "    }",
          "}",
          "",
          "// Tests",
          "pm.test('Status code is 200', function () {",
          "    pm.response.to.have.status(200);",
          "});",
          "",
          "pm.test('Response has success property', function () {",
          "    var jsonData = pm.response.json();",
          "    pm.expect(jsonData).to.have.property('success', true);",
          "});"
        ]
      }
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
